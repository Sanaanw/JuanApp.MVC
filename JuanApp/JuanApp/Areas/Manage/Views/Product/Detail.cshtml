@model Product
    <table style="margin-left:10px;margin-top:10px" class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Created Date</th>
                <th scope="col">Updated Date</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>
                        <img style="width:60px;height:70px"
                             src="~/assets/img/product/@Model.ProductImages.FirstOrDefault(a=>a.Status==true)?.Name"
                             alt="">
                    </td>
                    <td>@Model.Name</td>
                    <td>@Model.CreatedDate?.ToString("dd MMMM, yyyy")</td>
                    <td>@Model.UpdatedDate?.ToString("dd MMMM, yyyy")</td>
                </tr>
        </tbody>
    </table>